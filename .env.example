# ============== AWS Configuration ==============
# AWS RDS PostgreSQL Database
AWS_RDS_ENDPOINT=your-database.region.rds.amazonaws.com
AWS_RDS_PORT=5432
AWS_RDS_DB_NAME=gitthub
AWS_RDS_USERNAME=your-db-username
AWS_RDS_PASSWORD=your-db-password

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=gitthub-databank
# Optional: CloudFront CDN domain
AWS_S3_CUSTOM_DOMAIN=d1234567890.cloudfront.net

# ============== Alternative: Supabase + Cloudinary ==============
# Supabase Database (if not using AWS RDS)
# Get these from https://supabase.com/dashboard/project/YOUR_PROJECT/settings/database
DATABASE_URL=postgresql://username:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Cloudinary Storage (if not using AWS S3)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here

# Environment
RENDER=true  # Set automatically by Render
NODE_ENV=production
PYTHON_ENV=production

# API Keys (Optional - for AI features)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GOOGLE_API_KEY=your-google-key

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000

# File Upload Limits
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,json,xlsx,xls,pdf,txt,py,ipynb,jpg,jpeg,png,parquet